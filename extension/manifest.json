{
  "manifest_version": 3,
  "name": "NSFW Video Skipper - Cookie Extractor",
  "version": "1.0.0",
  "description": "Extracts YouTube cookies for backend authentication.",
  "permissions": ["cookies", "activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*", "https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract YouTube Cookies"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
